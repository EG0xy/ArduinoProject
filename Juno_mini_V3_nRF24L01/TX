//nrf24: CSN-9; CE-10
//Mosfet: 8 PWM
//Shunt resistor: A7
// Analog Buttons: A6
// 7-Seg LED display: 0-7 anode, A0-A3 Cathode.

#include <button.h>
button bb (A6);

#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>
RF24 radio(10,9);

   const byte digit[] = //digit mapping
    {
   //HGFEDCBA  
    B00111111, // 0
    B00000110, // 1
    B01011011, // 2
    B01001111, // 3
    B01100110, // 4
    B01101101, // 5
    B01111101, // 6
    B00000111, // 7
    B01111111, // 8
    B01101111, // 9
    B00000000, // BLANK
    B10000000  }; //dot

int ta,tb,tc,td;
byte counter;
byte d1,d2,d3,d4;
byte mode=0;
int number=5555;

int airbytes;
//---------------------------------------------------------
    
void setup() {

  DDRD=0b11111111; 
  DDRC=0b00001111; 

  radio.begin(); 
  radio.setChannel(108);   
  radio.setPayloadSize (2);    
  radio.setPALevel(RF24_PA_MAX);    
  radio.setDataRate(RF24_250KBPS);

    
  radio.openWritingPipe(0x222);
  radio.stopListening(); 
}

//---------------------------------------------------------

void loop() {
bb.buttonWatchdog();

  if(bb.br==2){number=random(1, 9999);} 
  if(bb.br==1){number=8888;}

ta=millis();

if(ta-tb>=500){
  radio.write(&airbytes, sizeof(airbytes));  
  tb=ta;
  }
  
  airbytes=number;  

d1= digit[number/1000];
d2= digit[number/100%10];
d3= digit[number/10%10];
d4= digit[number%10];


 tc=millis();
if(tc-td >= 1){
  
  counter++;
  if(counter==4) counter=0;

  if(counter==0){
   PORTC |= 0b00001111; 
   PORTD=d1;
   PORTC &= ~(1<<0);
    }  

  if(counter==1){
   PORTC |= 0b00001111; 
   PORTD=d2;
   PORTC &= ~(1<<1);
    }  

  if(counter==2){
   PORTC |= 0b00001111; 
   PORTD=d3;
   PORTC &= ~(1<<2);
    }  

  if(counter==3){
   PORTC |= 0b00001111; 
   PORTD=d4;
   PORTC &= ~(1<<3);    
    }       

  td=tc;
  }   

}
